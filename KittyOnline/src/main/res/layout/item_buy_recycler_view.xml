<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/card_view_normal"
    app:cardElevation="@dimen/card_view_elevation_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/stick_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shp_rect_corners_white"
            android:drawableStart="@drawable/ic_chat_black_24dp"
            android:padding="10dp"
            android:text="设计师"
            android:textDirection="locale"
            android:textSize="24sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/ic_test_0" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="新年新衣新样貌"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="让这些单品改变你！新年就是要与众不同！" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:src="@color/primary" />

    </LinearLayout>
</android.support.v7.widget.CardView>


