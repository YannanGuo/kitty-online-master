<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:columnCount="5"
    android:orientation="horizontal"
    android:rowCount="4">

    <com.guoxiaoxing.kitty.widget.banner.ConvenientBanner
        android:id="@+id/cb_home_ad"
        android:layout_columnSpan="5"
        android:layout_gravity="fill"
        android:layout_rowSpan="2"
        app:canLoop="true" />


    <android.support.v7.widget.CardView
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:layout_rowSpan="2"
        app:cardElevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space_5"
            android:textColor="@color/red_700"
            android:textSize="@dimen/text_size_18"
            tools:text="限时快抢" />

        <com.guoxiaoxing.kitty.widget.timecounter.CountdownView
            android:id="@+id/cv_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:isHideTimeBackground="false"
            app:isShowDay="false"
            app:isShowHour="false"
            app:isShowMillisecond="true"
            app:isShowMinute="true"
            app:isShowSecond="true"
            app:suffixGravity="center"
            app:suffixTextColor="#000000"
            app:suffixTextSize="30sp"
            app:timeBgDivisionLineSize="1dp"
            app:timeBgRadius="3dp"
            app:timeBgSize="50dp"
            app:timeTextColor="#FFFFFF"
            app:timeTextSize="30sp" />

    </android.support.v7.widget.CardView>

    <com.guoxiaoxing.kitty.widget.banner.ConvenientBanner
        android:id="@+id/cb_sale_ad"
        android:layout_columnSpan="3"
        android:layout_gravity="fill" />


    <ImageView android:src="@drawable/ic_image_black_48dp" />

    <ImageView android:src="@drawable/ic_image_black_48dp" />


</GridLayout>
