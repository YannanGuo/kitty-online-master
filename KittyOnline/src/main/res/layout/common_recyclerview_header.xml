<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.guoxiaoxing.kitty.widget.banner.ConvenientBanner
        android:id="@+id/cb_home_ad"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:canLoop="true" />

    <com.guoxiaoxing.kitty.widget.timecounter.CountdownView
        android:id="@+id/cv_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:isHideTimeBackground="false"
        app:isShowDay="false"
        app:isShowHour="false"
        app:isShowMillisecond="true"
        app:isShowMinute="true"
        app:isShowSecond="true"
        app:suffixGravity="center"
        app:suffixTextColor="#000000"
        app:suffixTextSize="30sp"
        app:timeBgDivisionLineSize="1dp"
        app:timeBgRadius="3dp"
        app:timeBgSize="50dp"
        app:timeTextColor="#FFFFFF"
        app:timeTextSize="30sp" />

</LinearLayout>

