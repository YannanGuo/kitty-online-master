<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp"
        android:text="理财-记录" />

    <TextView
        android:id="@+id/tv_mes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="消息小圆点"
        android:visibility="gone" />

    <android.support.v7.widget.GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:alignmentMode="alignBounds"
        app:columnCount="4"
        app:rowCount="2"
        app:rowOrderPreserved="false"
        app:useDefaultMargins="true">

        <LinearLayout
            android:id="@+id/ll_shop"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal">

            <ImageView
                style="@style/image_service"
                android:src="@drawable/ic_category_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/mine_xiao_dian" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_wallet"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal">

            <ImageView
                style="@style/image_service"
                android:src="@drawable/ic_category_2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/mine_qian_bao" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_coupon"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal">

            <ImageView
                style="@style/image_service"
                android:src="@drawable/ic_category_3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/mine_you_hui_quan" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_money"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal">

            <ImageView
                style="@style/image_service"
                android:src="@drawable/ic_category_4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/mine_li_cai" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_super_shop"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal">

            <ImageView
                style="@style/image_service"
                android:src="@drawable/ic_category_5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/mine_shang_cheng" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_card"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal">

            <ImageView
                style="@style/image_service"
                android:src="@drawable/ic_category_6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/mine_da_ka" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_note"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal">

            <ImageView
                style="@style/image_service"
                android:src="@drawable/ic_category_7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/mine_qing_ji" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_account"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal">

            <ImageView
                style="@style/image_service"
                android:src="@drawable/ic_category_8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/mine_ji_zhang" />

        </LinearLayout>


    </android.support.v7.widget.GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp"
        android:text="生活-健康" />

    <android.support.v7.widget.GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:alignmentMode="alignBounds"
        app:columnCount="4"
        app:rowCount="1"
        app:rowOrderPreserved="false"
        app:useDefaultMargins="true">

        <LinearLayout
            android:id="@+id/ll_aunt"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal">

            <ImageView
                style="@style/image_service"
                android:src="@drawable/ic_category_9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/mine_da_yi_ma" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_star"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal">

            <ImageView
                style="@style/image_service"
                android:src="@drawable/ic_category_10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/mine_xing_zuo" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_food"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal">

            <ImageView
                style="@style/image_service"
                android:src="@drawable/ic_category_11" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/mine_mei_shi" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_album"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal">

            <ImageView
                style="@style/image_service"
                android:src="@drawable/ic_category_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/mine_xiang_ce" />

        </LinearLayout>

    </android.support.v7.widget.GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp"
        android:text="帮助-服务" />


    <android.support.v7.widget.GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:alignmentMode="alignBounds"
        app:columnCount="4"
        app:rowCount="1"
        app:rowOrderPreserved="false"
        app:useDefaultMargins="true">

        <LinearLayout
            android:id="@+id/ll_service"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal">

            <ImageView
                style="@style/image_service"
                android:src="@drawable/ic_category_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/mine_ke_fu" />

        </LinearLayout>


        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal">

            <ImageView
                style="@style/image_service"
                android:src="@drawable/ic_category_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/mine_ke_fu" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal">

            <ImageView
                style="@style/image_service"
                android:src="@drawable/ic_category_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/mine_ke_fu" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal">

            <ImageView
                style="@style/image_service"
                android:src="@drawable/ic_category_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/mine_ke_fu" />

        </LinearLayout>

    </android.support.v7.widget.GridLayout>

</LinearLayout>