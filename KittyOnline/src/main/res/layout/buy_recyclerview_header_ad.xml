<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/card_view_normal">

    <android.support.v7.widget.GridLayout
        android:id="@+id/choice_grid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_10"
        app:alignmentMode="alignBounds"
        app:columnCount="3"
        app:rowCount="2"
        app:rowOrderPreserved="false"
        app:useDefaultMargins="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_rowSpan="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/space_5"
                android:text="限时快抢"
                android:textColor="@color/red_700"
                android:textSize="@dimen/text_size_18" />

            <com.guoxiaoxing.kitty.widget.timecounter.CountdownView
                android:id="@+id/cv_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:isHideTimeBackground="false"
                app:isShowDay="false"
                app:isShowHour="false"
                app:isShowMillisecond="true"
                app:isShowMinute="true"
                app:isShowSecond="true"
                app:suffixGravity="center"
                app:suffixTextColor="@color/black"
                app:suffixTextSize="30sp"
                app:timeBgDivisionLineSize="1dp"
                app:timeBgRadius="3dp"
                app:timeBgSize="40dp"
                app:timeTextColor="@color/white"
                app:timeTextSize="20sp" />

            <com.facebook.drawee.view.SimpleDraweeView
                style="@style/image_rect_large"
                app:placeholderImage="@drawable/ic_kuai_qiang"
                app:placeholderImageScaleType="focusCrop" />

        </LinearLayout>

        <com.guoxiaoxing.kitty.widget.banner.ConvenientBanner
            android:id="@+id/cb_sale_ad"
            android:layout_width="200dp"
            android:layout_height="@dimen/banner_small_height"
            app:layout_columnSpan="2" />

        <com.facebook.drawee.view.SimpleDraweeView
            style="@style/image_rect_middle"
            app:placeholderImage="@drawable/ic_tuan_gou"
            app:placeholderImageScaleType="focusCrop" />

        <com.facebook.drawee.view.SimpleDraweeView
            style="@style/image_rect_middle"
            app:placeholderImage="@drawable/ic_tuan_gou"
            app:placeholderImageScaleType="focusCrop" />

    </android.support.v7.widget.GridLayout>

</android.support.v7.widget.CardView>