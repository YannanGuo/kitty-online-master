<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/card_view_normal"
    android:layout_width="wrap_content"
    app:cardElevation="@dimen/card_view_elevation"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/ll_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_goods_image"
            style="@style/image_rect_middle"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            app:actualImageScaleType="focusCrop" />

        <TextView
            android:id="@+id/tv_goods_name"
            style="@style/text_title_middle"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="新年新衣新样貌" />

        <TextView
            android:id="@+id/tv_goods_desc"
            style="@style/text_content_small"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="让这些单品改变你!" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_goods_category"
        style="@style/text_content_small"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="@drawable/shp_rect_corners_white"
        android:drawablePadding="3dp"
        android:drawableStart="@drawable/bmp_tab_main_buy_selected"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingEnd="@dimen/space_10"
        android:paddingStart="@dimen/space_10"
        android:text="设计师" />

</android.support.v7.widget.CardView>


