<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <com.guoxiaoxing.kitty.widget.CircularImageView
        android:id="@+id/stick_img"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/tv_market_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shp_rect_corners_white"
        android:drawableStart="@drawable/ic_chat_black_24dp"
        android:padding="10dp"
        android:text="设计师"
        android:textDirection="locale"
        android:textSize="24sp" />

</LinearLayout>